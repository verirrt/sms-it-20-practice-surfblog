@model SurfRU.Models.DBModels.User

@{
    ViewBag.Title = "Блог любителей сёрфинга. Регистрация.";
}

<div class="panel panel-info">
    <div class="panel-heading">
        Регистрация нового пользователя
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Register", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <form>
            <div class="form-group">
                @Html.LabelFor(model => model.Nickname)
                @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control", title = "От 3 до 20 символов. Латинские буквы, цифры, подчёркивания." } })
                @Html.ValidationMessageFor(model => model.Nickname)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", title = "Пример: ex@example.ex" } })
                @Html.ValidationMessageFor(model => model.Email)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", title = "От 6 до 20 символов.", type = "password" } })
                @Html.ValidationMessageFor(model => model.Password)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PasswordConfirm)
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", type="password" } })
                @Html.ValidationMessageFor(model => model.PasswordConfirm)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName)
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Photo)
                <input name="imageData" type="file" accept="image/jpeg" />
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ContactInfo)
                @Html.TextAreaFor(model => model.ContactInfo, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.About)
                @Html.TextAreaFor(model => model.About, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Achievements)
                @Html.TextAreaFor(model => model.Achievements, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
            </div>

            <div>
                @Html.ValidationSummary(true, "", new { @class="text-danger"})
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Зарегистрироваться</button>
            </div>


        </form>
        }
    </div>
</div>

<div class="notif">
    Уже есть аккаунт? <a href="@Url.Action("Index", "Home")"><button type="submit" class="btn btn-style">Войти</button></a>
</div>
