@using SurfRU.Models.DBModels
@using SurfRU.Helpers
@model SurfRU.Models.DBModels.Post

@{
    ViewBag.Title = "Блог любителей сёрфинга. Лента новостей.";
}

@if (Session["UserId"] != null)
{


    <div class="panel panel-info first-block">
        <div class="panel-heading">
            Добавление новой записи
        </div>

        <div class="panel-body">
            @using (Html.BeginForm("AddPost", "Feed", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <form>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Text, new { @class = "form-labels" })
                        @Html.TextAreaFor(model => model.Text, 10, 100, new { htmlAttributes = new { @class = "form-control add-post-area" } })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Photo, new { @class = "form-labels" })

                        <input name="imageData" type="file" accept="image/jpeg" />
                    </div>
                    <div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn pull-right btn-style">Добавить</button>

                </form>
            }
        </div>
    </div>
}

@foreach (var post in ViewBag.Posts)
{
    <div class="panel panel-info wide-panel">
        <div class="panel-heading">

            @{
                var photoUrl = ImageUrlHelpers.GetUrl(post.Author.Photo);
                if (photoUrl != null)
                {
                    <img src="@Url.Content(photoUrl)" class="avatar" />
                }
            }

            @post.Author.Nickname
            @post.PublishDate

                    @*<div class="signature">
                        <p class="author>"@post.Author.Nickname</p>
                        <p class="date">@post.PublishDate</p>
                    </div>*@
            
        </div>
        <div class="panel-body">
            <p>@post.Text</p>

            @{
                if (@post.Photo != Guid.Empty)
                {
                    var url = string.Format("~/Content/Images/Uploads/{0}.jpg", @post.Photo.ToString());
                    <div>
                        <img src="@Url.Content(url)" class="full-width" />
                    </div>
                }
            }

        </div>
   </div>
}

